<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="create-manager-access-table" author="iinozemtseva">
        <createTable tableName="manager_access">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="manager_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_manager_access_manager"
                             references="manager(id)"/>
            </column>
            <column name="scope_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_manager_access_scope"
                             references="scope(id)"/>
            </column>
            <column name="value" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>